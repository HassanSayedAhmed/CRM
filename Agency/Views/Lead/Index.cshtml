@section scripts
{
    <script>
        //$('#role_id').selectize({
        //    plugins: ['remove_button'],
        //});

       $(document).ready(function () {
           var leads_ids = [];
           var datatable = $('#userTable')
               .DataTable({/* we added this from the other system to have same search and same pagination*/
                   "dom": "<'dt--top-section '<'row'<'col-sm-12 col-md-6 d-flex justify-content-md-start justify-content-center'B><'col-sm-12 col-md-6 d-flex justify-content-md-end justify-content-center mt-md-0 mt-3'f>>>" +
                       "<'table-responsive  'tr>" +
                       "<'dt--bottom-section d-sm-flex justify-content-sm-between text-center'<'dt--pages-count  mb-sm-0 mb-3'i><'dt--pagination'p>>",
                   "buttons": {
                       buttons: [
                           { extend: 'copy', className: 'btn btn-sm' },
                           { extend: 'csv', className: 'btn btn-sm' },
                           { extend: 'excel', className: 'btn btn-sm' },
                           { extend: 'print', className: 'btn btn-sm' }
                       ]
                   },
                   "oLanguage": {
                       "oPaginate": { "sPrevious": 'Perivous', "sNext": 'Next' },
                       "sInfo": "Showing page _PAGE_ of _PAGES_",
                       "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
                       "sSearchPlaceholder": "Search...",
                       "sLengthMenu": "Results :  _MENU_",
                   },
                    "processing": true,
                    "serverSide": true,
                    "scrollX": true,
                    "stateSave": false,
                    "lengthChange": false,
                    "dom": 'Bfrtip',

                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "pageLength":10,
                    "rowId": 'id',
                    "ajax": {
                        "url": "@Url.Action("Index", "Lead")",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                   "columns": [
                       {
                           "data": "id", "id": true,
                           fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                               var html = "";
                               html += "<input type='checkbox' class='selectLead' />";
                               $(nTd).html("<span class='action-column'>" + html + "</span>");
                           }
                       },
                       {

                           "data": "id",
                           "searchable": true
                       },
                       {
                           "data": "first_name", "searchable": true,
                           fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                               var html = "";
                               html += oData.first_name + " " + oData.last_name + "<br>";
                               if (oData.phone1)
                                   html += "Primary Phone: " + oData.phone1 + "<br>";
                               if (oData.phone2)
                                   html += "Seconday Phone: " + oData.phone2 + "<br>";
                               if (oData.alternative_numbers)
                                   html += "Alternate Numbers: " + oData.alternative_numbers;
                               $(nTd).html("<span class='action-column'>" + html + "</span>");
                           }
                       }, {
                           "data": "created_at_string", "searchable": true,
                           fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                               var html = "";
                               if (oData.created_at_string)
                                   html += oData.created_at_string;
                               else
                                   html += "-";
                               $(nTd).html("<span class='action-column'>" + html + "</span>");
                           }
                       },
                       {
                           "data": "assigned_user_id", "searchable": true,
                           fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                               var html = "";
                               if (oData.assigned_user_name)
                                   html += oData.assigned_user_name;
                               else
                                   html += "-";
                               $(nTd).html("<span class='action-column'>" + html + "</span>");
                           }
                       },
                       {
                           "data": "leadProjects", "searchable": true,
                           fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                               var html = "";
                               if (oData.leadProjects) {
                                   console.log(oData.leadProjects)
                                   oData.leadProjects.forEach(function (project) {
                                       html += project.project_name + "<br>";
                                    });
                               }
                               else
                                   html += "-";
                               $(nTd).html("<span class='action-column'>" + html + "</span>");
                           }
                       },
                       {
                           "data": "lead_stage_id", "searchable": true,
                           fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                               var html = "";
                               if (oData.lead_stage_name)
                                   html += oData.lead_stage_name;
                               else
                                   html += "-";
                               $(nTd).html("<span class='action-column'>" + html + "</span>");
                           }
                       },
                       {
                           "data": "lead_category_id", "searchable": true,
                           fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                               var html = "";
                               if (oData.lead_category_name)
                                   html += oData.lead_category_name;
                               else
                                   html += "-";
                               $(nTd).html("<span class='action-column'>" + html + "</span>");
                           }
                       },
                       {
                           "data": "source_id", "searchable": true,
                           fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                               var html = "";
                               if (oData.source_name)
                                   html += oData.source_name;
                               else
                                   html += "-";
                               $(nTd).html("<span class='action-column'>" + html + "</span>");
                           }
                       },
                       {
                           "data": "remark", "searchable": true,
                           fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                               var html = "";
                               if (oData.remark)
                                   html += oData.remark;
                               else
                                   html += "-";
                               $(nTd).html("<span class='action-column'>" + html + "</span>");
                           }
                       },
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                var userId = '@Session["id"].ToString()';
                                var isSuperAdmin = '@CRM.Auth.isA.superAdmin()';
                                var isAdmin = '@CRM.Auth.isA.admin()';
                                console.log(isSuperAdmin);
                                console.log(isAdmin);

                                if ((parseInt(userId) == parseInt(oData.created_by)) || isSuperAdmin == "True" || isAdmin == "True") {
                                    html += "<a class='edit1' href='/Lead/manageLead/" + oData.id +"' title='Edit'><i class='far fa-edit'></i></a>&nbsp;|&nbsp;";
                                    html += "<a class='delete' href='javascript:void(0)' title='Delete'><i class='fas fa-trash'></i></a>&nbsp;|&nbsp;";
                                    html += "<a class='assign_agent' href='javascript:void(0)' title='Assign To Sales Agent'><i class='fas fa-user'></i></a>&nbsp;|&nbsp;";

                                }
                                html += "<a class='make_activity' href='javascript:void(0)' title='Activity'><i class='fas fa-phone-volume'></i></a>&nbsp;|&nbsp;";
                                html += "<a class='make_decision' href='javascript:void(0)' title='Decision'><i class='fas fa-tasks'></i></a>&nbsp;|&nbsp;";
                                html += "<a class='make_deal' href='javascript:void(0)' title='Convert To Deal'><i class='fas fa-check-double'></i></a>";
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                    ]
                 });

            $('#search').on('click', function () {
                datatable.search($("#text_search").val());
                //datatable.columns(0).search($("#date-form").val());
                //datatable.columns(1).search($("#date-to").val());
                datatable.draw();
            });

            $('#text_search').on('keyup', function (e) {
                if (e.keyCode == 13)
                    $('#search_button').trigger('click');
            });

            $('#reset').on('click', function () {
                $("#text_search").val("");

                $('#search').trigger('click');

            });

            //$('#date-form').bootstrapMaterialDatePicker({
            //    time: false
            //});

            //$('#date-to').bootstrapMaterialDatePicker({
            //    time: false
            //});
           //$("#image").click(function (event) {
           //    var output = document.getElementById('image');
           //    output.src = URL.createObjectURL(event.target.files[0]);
           //});


           $("#assign_leads").click(function () {
               if (leads_ids.length != 0) {
                   var modal = $('#manage_assign_Lead_modal').clone();
                   var action = '@Url.Action("assignLeads", "Lead")';
                   modal.find('form').attr('action', action);
                   modal.find('#modal_title').text('Assign Leads');
                   modal.execModal({
                       progressBar: 'progress_bar',
                       progressText: 'progress_text',
                   }, function (response) {
                           datatable.draw();
                           leads_ids = [];
                   }, function (response) {

                   }, function (dialog) {
                       dialog.find("#lead_ids").val(leads_ids.join());
                   });
               }
               else {
                   Swal.fire(
                       'Error!',
                       'No Selected Leads!',
                       'error'
                   )
               }
           });

           $(document).on("click", ".assign_agent", function () {

               var data = datatable.row($(this).closest('tr')).data();
                var modal = $('#manage_assign_Lead_modal').clone();
                var action = '@Url.Action("assignLeads", "Lead")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Assign Leads');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {
                        datatable.draw();
                }, function (response) {

                }, function (dialog) {
                    dialog.find("#assigned_user_id").val(data.assigned_user_id);

                });

            });

           $(document).on("click", "#add_quick_lead", function () {
               var modal = $('#manage_quick_lead_modal').clone();
                   var action = '@Url.Action("saveQuickLead", "Lead")';
                   modal.find('form').attr('action', action);
                   modal.find('#modal_title').text('Add Quick Lead');
                   modal.execModal({
                       progressBar: 'progress_bar',
                       progressText: 'progress_text',
                   }, function (response) {
                           datatable.draw();
                   }, function (response) {


                   }, function (dialog) {
                           var property_ids = dialog.find('#property_ids').selectize({
                               plugins: ['remove_button'],
                           });
                   });
           });

           $(document).on("click", ".make_activity", function () {
               var data = datatable.row($(this).closest('tr')).data();
               var modal = $('#manage_make_activity_modal').clone();
                   var action = '@Url.Action("makeActivity", "Lead")';
                   modal.find('form').attr('action', action);
                   modal.find('#modal_title').text('Make Activity');
                   modal.execModal({
                       progressBar: 'progress_bar',
                       progressText: 'progress_text',
                   }, function (response) {
                           datatable.draw();
                   }, function (response) {


                   }, function (dialog) {
                           dialog.find("#lead_id").val(data.id);
                   });
           });

           $(document).on("click", ".make_decision", function () {
               var data = datatable.row($(this).closest('tr')).data();
               var modal = $('#manage_lead_decision_modal').clone();
                   var action = '@Url.Action("makeDecision", "Lead")';
                   modal.find('form').attr('action', action);
                   modal.find('#modal_title').text('Make Decision');
                   modal.execModal({
                       progressBar: 'progress_bar',
                       progressText: 'progress_text',
                   }, function (response) {
                           datatable.draw();
                   }, function (response) {


                   }, function (dialog) {
                           dialog.find("#id").val(data.id);
                           dialog.find('#decision_id option[value=' + data.decision_id + ']').attr('selected', 'selected');
                   });
           });

           $(document).on("click", ".make_deal", function () {
               var data = datatable.row($(this).closest('tr')).data();
               var modal = $('#manage_lead_deal_modal').clone();
                   var action = '@Url.Action("makeDeal", "Lead")';
                   modal.find('form').attr('action', action);
                   modal.find('#modal_title').text('Convert To Deal');
                   modal.execModal({
                       progressBar: 'progress_bar',
                       progressText: 'progress_text',
                   }, function (response) {
                           datatable.draw();
                   }, function (response) {


                   }, function (dialog) {
                           dialog.find("#id").val(data.id);
                           dialog.find('#deal_property_id option[value=' + data.deal_property_id + ']').attr('selected', 'selected');
                           dialog.find("#deal_property_price").val(data.deal_property_price);
                           dialog.find('#deal_make_user_id option[value=' + data.deal_make_user_id + ']').attr('selected', 'selected');
                   });
           });

           $(document).on("click", ".selectLead", function () {
               var data = datatable.row($(this).closest('tr')).data();
               if ($(this).is(':checked')) {
                   leads_ids.push(data.id);

               }
               else {
